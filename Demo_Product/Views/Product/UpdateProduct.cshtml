@model EntityLayer.Concreate.Product
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1>Ürün Güncelleme</h1>

<form method="post">

    @Html.Label("Ürün Id")
    @Html.TextBoxFor(x=> x.Id,new { @class="form-control" })
    <br />

    @Html.Label("Ürün Adı")
    @Html.TextBoxFor(x=>x.Name,new  { @class="form-control " })
    <br />

    @Html.Label("Ürün Fiyatı")
    @Html.TextBoxFor(x=> x.Stock,new { @class="form-control" })
    <br />

    @Html.Label("Ürün Stok sayısı")
    @Html.TextBoxFor(x=>x.Stock,new { @class="form-control" })
    <br />

    <button class="btn btn-warning">Ürün Güncelle</button>


</form>